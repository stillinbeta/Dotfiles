#Guest Mode
"~/Scripts/guest.sh"   
    m:0x0 + c:156
    XF86Launch1


#Suspend
"sudo pm-suspend"
    m:0x0 + c:150
    XF86Sleep

# Increase volume
"amixer set Master playback unmute 5+ && ~/Scripts/zenity-volume.sh"
    m:0x0 + c:123
    XF86AudioRaiseVolume

# Decrease volume
"amixer set Master playback unmute 5- && ~/Scripts/zenity-volume.sh"
    m:0x0 + c:122
    XF86AudioLowerVolume

# Toggle mute
"amixer set Master mute"
    m:0x0 + c:121
    XF86AudioMute


#The following media control keys are banshee-specific
"banshee --toggle-playing"
    m:0x0 + c:172
    XF86AudioPlay

"banshee --restart-or-previous"
    m:0x0 + c:173
    XF86AudioPrev

"banshee --next"
    m:0x0 + c:171
    XF86AudioNext
	    
"banshee --stop"
    m:0x0 + c:174
    XF86AudioStop
	
#Brightness controls. The BIOS handles the actual brightness
#These just display it.
"~/Scripts/zenity-brightness.sh"
    m:0x0 + c:233
    XF86MonBrightnessUp

"~/Scripts/zenity-brightness.sh"
    m:0x0 + c:232
    XF86MonBrightnessDown

#Dmenu 
"dmenu_run -b -nf '#ccc' -nb '#000' -sb '#535353'"
    m:0x40 + c:49
    Mod4 + grave
